{
  "restartable": "rs",
  "ignore": [
    ".git",
		"node_modules/**/node_modules",
		"./build/",
		"./source/"
  ],
  "verbose": true,
  "execMap": {
    "js": "npm run nodemon"
  },
  "events": {
    "restart": "echo 'DUDE!'"
  },
  "watch": [
    "./server/source/*"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js json css"
}
